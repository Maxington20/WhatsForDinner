<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WhatsForDinner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WhatsForDinner"
    BackgroundColor="#FFA500">


    <!-- Main content -->
    <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"/>

    <!-- Fly-out menu items -->
    <Shell.FlyoutHeader>
        <Label Text="Menu"
               FontSize="Large"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Generate From Ingredients"
                Route="GenerateFromIngredientsPage">
        <ShellContent ContentTemplate="{DataTemplate local:GenerateFromIngredientsPage}" />
    </FlyoutItem>
   
    

</Shell>