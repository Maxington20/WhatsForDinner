<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhatsForDinner.Pages.MealOptionsPage"
             Title="Meal Options"
             BackgroundColor="White">
    <StackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Button Text="New Recipe"
                FontSize="24"
                TextColor="White"
                BackgroundColor="#FFA500"
                CornerRadius="25"
                Clicked="OnNewRecipeButtonClicked"/>
        <Button Text="Saved Recipes"
                FontSize="24"
                TextColor="White"
                BackgroundColor="#FFA500"
                CornerRadius="25"
                Clicked="OnSavedRecipesButtonClicked"/>
        <Button Text="Generate Random Recipe"
                FontSize="24"
                TextColor="White"
                BackgroundColor="#FFA500"
                CornerRadius="25"
                Clicked="OnGenerateRandomRecipeButtonClicked"/>
    </StackLayout>
</ContentPage>