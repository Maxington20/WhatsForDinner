<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhatsForDinner.Pages.NewRecipePage"
             Title="NewRecipePage"
             BackgroundColor="White">
    <StackLayout>
        <Label Text="Recipe Name" />
        <Entry x:Name="RecipeNameEntry" Placeholder="Enter recipe name" />

        <Label Text="Ingredients" />
        <Editor x:Name="IngredientsEditor" Placeholder="Enter ingredients" />

        <Label Text="Directions" />
        <Editor x:Name="DirectionsEditor" Placeholder="Enter directions" />

        <Button Text="Save Recipe" Clicked="OnSaveRecipeButtonClicked" />
    </StackLayout>
</ContentPage>